<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<FLogger controller="jFLogger" version="1.x">
    <Config>
        <ConfigItem key="isFileRecorderAppended" type="boolean">false</ConfigItem>
        <ConfigItem key="useFileRecorder" type="boolean">true</ConfigItem>
        <ConfigItem key="recordToFile" type="string">logs.log</ConfigItem>
        <ConfigItem key="useErrStreamWhenError" type="boolean">false</ConfigItem>
        <ConfigItem key="appendModeAppendText" type="string">New Record Start At : {Time}</ConfigItem>
        <ConfigItem key="logFormat" type="string">[{Time}] [thread-{ThreadId}] [{ColorStart}{TypeShort}{ColorEnd}] {Name} : {Log}</ConfigItem>
    </Config>
    <ColorScheme>
        <LogColor level="Trace">[1;35m</LogColor>
        <LogColor level="Error">[31m</LogColor>
        <LogColor level="Info">[32m</LogColor>
        <LogColor level="Debug">[1;36m</LogColor>
        <LogColor level="Warn">[1;33m</LogColor>
    </ColorScheme>
</FLogger>
