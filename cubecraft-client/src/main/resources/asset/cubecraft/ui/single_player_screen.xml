<?xml version="1.0" encoding="utf-8"?>

<screen bg="image-bg-blur" id="cubecraft:single_player_screen">
    <topbar layout="flow/top,0,24">
        <label layout="origin/middle_middle,0,0,0,8" type="lang" color="ffffff" align="middle">singleplayer.title</label>
    </topbar>

    <panel layout="origin/left_top,0,0,190,193" border="20,10,40,10">
        <label type="lang" layout="origin/middle_top,0,10,0,12" color="ffffff" align="middle">
            singleplayer.menu.select
        </label>
        <textbar id="world_search" layout="origin/middle_top,0,30,160,30" border="10,10,4,4" />
        <button id="join_world" layout="origin/middle_top,0,75,160,30" border="10,10,4,4" enabled="false">
            <label type="lang" layout="origin/middle_middle,0,0,0,8" color="ffffff" align="middle">
                singleplayer.menu.join
            </label>
        </button>
        <button id="edit_world" layout="origin/middle_top,-40,105,80,30" border="10,5,4,4" enabled="false">
            <label type="lang" layout="origin/middle_middle,0,0,0,8" color="ffffff" align="middle">
                singleplayer.menu.edit
            </label>
        </button>
        <button id="delete_world" layout="origin/middle_top,40,105,80,30" border="5,10,4,4" enabled="false">
            <label type="lang" layout="origin/middle_middle,0,0,0,8" color="ffffff" align="middle">
                singleplayer.menu.delete
            </label>
        </button>
    </panel>

    <panel layout="origin/left_top,0,193,190,118" border="20,10,0,20">
        <label type="lang" layout="origin/middle_top,0,10,0,12" color="ffffff" align="middle">
            singleplayer.menu.new
        </label>
        <button id="create_world" layout="origin/middle_top,0,30,160,30" border="10,10,4,4">
            <label type="lang" layout="origin/middle_middle,0,0,0,8" color="ffffff" align="middle">
                singleplayer.menu.create
            </label>
        </button>
        <button id="import_world" layout="origin/middle_top,0,60,160,30" border="10,10,4,4" enabled="false">
            <label type="lang" layout="origin/middle_middle,0,0,0,8" color="ffffff" align="middle">
                singleplayer.menu.import
            </label>
        </button>
    </panel>

    <panel layout="origin/left_top,0,0,370,150" border="190,20,40,20" scale="false,true,true,true">
        <label type="lang" layout="origin/middle_top,0,10,0,12" color="ffffff" align="middle">
            singleplayer.menu.list
        </label>

        <scroll_panel id="world_list" layout="origin/left_top,0,10,0,0" border="10,10,35,10" scale="true,true,true,true">
            <toggle_button id="card_example" layout="origin/left_top,0,50,100,60" scale="false,true,false,false" border="10,10,10,0">
                <label id="title" type="raw" layout="origin/left_top,5,5,0,12" color="ffffff" align="left">
                    {level_name}
                </label>
                <label id="created_time" type="raw" layout="origin/left_top,5,20,0,6" color="ffffff" align="left">
                    {level_create_time}
                </label>
                <label id="size" type="raw" layout="origin/left_top,5,35,0,6" color="ffffff" align="left">
                    {size}
                </label>
            </toggle_button>
        </scroll_panel>
    </panel>
</screen>